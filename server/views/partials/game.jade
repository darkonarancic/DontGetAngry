div(class="col-xs-12 main-menu")
    div(class="navbar navbar-default")
        div.navbar-header
            a.navbar-brand.pull-left
                h6.clear-top Don't Get Angry
        form(class="navbar-form navbar-right", role="search")
            div.col-xs-12
                div(class="form-group")
                    a Hello, {{ user.username }}&nbsp;&nbsp;&nbsp;
                button(type="submit" class="btn btn-primary" ng-click="logOut();") Logout
div(class="col-xs-12", )
    div(class="left-side")
        div(class="chat-box")
            div(class="col-xs-12")
                div(class="chat-history", id="chat-history", readonly)
                    div(ng-repeat="msg in chat.messages")
                        span(ng-class="msg.color")
                            strong {{ msg.sender + ': ' }}
                            span {{ msg.text }}
            div(class="chat-commands")
                div(class="col-lg-12")
                    div(class="input-group")
                        input(type="text" class="form-control" id="msg-input")
                        span(class="input-group-btn")
                            button(class="btn btn-success", type="button", ng-click="sendChatMsg();") Send

        div(class="players-map")
            div(ng-repeat="player in game.players")
                div(ng-class="player.playerColor")
                    span(class="dot me current", ng-if="player.username === user.username && player.currentlyPlaying === $index") {{ player.username }}
                    span(class="dot me", ng-if="player.username === user.username && player.currentlyPlaying !== $index") {{ player.username }}
                    span(class="dot current", ng-if="player.username !== user.username && player.currentlyPlaying === $index") {{ player.username }}
                    span(class="dot", ng-if="player.username !== user.username && player.currentlyPlaying !== $index") {{ player.username }}

    div(class="game-table")
        div(ng-repeat="player in game.players", ng-class="'box' + player.playerColor", ng-attr-id="{{ 'f-box' + ($index + 1) }}", on-finish-render="sortFigures();", ng-if="game.despicableMe.username === user.username")
            div(ng-class="'figure f1 ' + player.playerColor", ng-attr-id="{{ 'f1-' + player.playerColor }}", ng-click="moveFigure('f1-' + player.playerColor);", ng-attr-findex="{{$index}}", ng-if="game.despicableMe.playerColor === player.playerColor && player.canRoll && player.pendingStatus")
            div(ng-class="'figure f1 ' + player.playerColor", ng-attr-id="{{ 'f1-' + player.playerColor }}", ng-if="game.despicableMe.playerColor === player.playerColor && (!player.canRoll || !player.pendingStatus)")
            div(ng-class="'figure f2 ' + player.playerColor", ng-attr-id="{{ 'f2-' + player.playerColor }}", ng-click="moveFigure('f2-' + player.playerColor);", ng-attr-findex="{{$index + 1}}", ng-if="game.despicableMe.playerColor === player.playerColor && player.canRoll && player.pendingStatus")
            div(ng-class="'figure f2 ' + player.playerColor", ng-attr-id="{{ 'f2-' + player.playerColor }}", ng-if="game.despicableMe.playerColor === player.playerColor && (!player.canRoll || !player.pendingStatus)")
            div(ng-class="'figure f3 ' + player.playerColor", ng-attr-id="{{ 'f3-' + player.playerColor }}", ng-click="moveFigure('f3-' + player.playerColor);", ng-attr-findex="{{$index + 2}}", ng-if="game.despicableMe.playerColor === player.playerColor && player.canRoll && player.pendingStatus")
            div(ng-class="'figure f3 ' + player.playerColor", ng-attr-id="{{ 'f3-' + player.playerColor }}", ng-if="game.despicableMe.playerColor === player.playerColor && (!player.canRoll || !player.pendingStatus)")
            div(ng-class="'figure f4 ' + player.playerColor", ng-attr-id="{{ 'f4-' + player.playerColor }}", ng-click="moveFigure('f4-' + player.playerColor);", ng-attr-findex="{{$index + 3}}", ng-if="game.despicableMe.playerColor === player.playerColor && player.canRoll && player.pendingStatus")
            div(ng-class="'figure f4 ' + player.playerColor", ng-attr-id="{{ 'f4-' + player.playerColor }}", ng-if="game.despicableMe.playerColor === player.playerColor && (!player.canRoll || !player.pendingStatus)")

            div(ng-class="'figure f1 ' + player.playerColor", ng-attr-id="{{ 'f1-' + player.playerColor }}", ng-if="game.despicableMe.playerColor !== player.playerColor")
            div(ng-class="'figure f2 ' + player.playerColor", ng-attr-id="{{ 'f2-' + player.playerColor }}", ng-if="game.despicableMe.playerColor !== player.playerColor")
            div(ng-class="'figure f3 ' + player.playerColor", ng-attr-id="{{ 'f3-' + player.playerColor }}", ng-if="game.despicableMe.playerColor !== player.playerColor")
            div(ng-class="'figure f4 ' + player.playerColor", ng-attr-id="{{ 'f4-' + player.playerColor }}", ng-if="game.despicableMe.playerColor !== player.playerColor")

        div(ng-repeat="player in game.players", ng-class="'box' + player.playerColor", ng-attr-id="{{ 'f-box' + ($index + 1) }}", on-finish-render="sortFigures();", ng-if="game.despicableMe.username !== user.username")
            div(ng-class="'figure f1 ' + player.playerColor", ng-attr-id="{{ 'f1-' + player.playerColor }}")
            div(ng-class="'figure f2 ' + player.playerColor", ng-attr-id="{{ 'f2-' + player.playerColor }}")
